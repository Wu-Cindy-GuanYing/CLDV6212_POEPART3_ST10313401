@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">
    <h1 class="display-4 text-primary">
        <i class="fas fa-store"></i> Welcome to ABC Retailers!
    </h1>
    <p class="lead">Your one-stop shop for the best deals and latest products</p>

    <!-- Quick Stats -->
    <div class="row justify-content-center mt-4">
        <div class="col-auto">
            <span class="badge bg-primary fs-6 p-2">
                <i class="fas fa-users me-1"></i> @Model.CustomerCount Customers
            </span>
        </div>
        <div class="col-auto">
            <span class="badge bg-success fs-6 p-2">
                <i class="fas fa-box me-1"></i> @Model.ProductCount Products
            </span>
        </div>
        <div class="col-auto">
            <span class="badge bg-warning fs-6 p-2">
                <i class="fas fa-shopping-cart me-1"></i> @Model.OrderCount Orders
            </span>
        </div>
    </div>
</div>

<!-- ========================= -->
<!--      QUICK ACTION BUTTONS -->
<!-- ========================= -->

<div class="row g-4 mb-5">
    <!-- Customers -->
    <div class="col-xl-3 col-md-6">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Login" asp-action="Index"
               class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column justify-content-center p-4 shadow-sm hover-scale">
                <i class="fas fa-users fa-3x mb-3"></i>
                <span class="fs-5 fw-bold">View Customers</span>
                <small class="text-light opacity-75 mt-1">(@Model.CustomerCount registered)</small>
            </a>
        }
        else
        {
            <a asp-controller="Customer" asp-action="Index"
               class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column justify-content-center p-4 shadow-sm hover-scale">
                <i class="fas fa-users fa-3x mb-3"></i>
                <span class="fs-5 fw-bold">Manage Customers</span>
                <small class="text-light opacity-75 mt-1">(@Model.CustomerCount total)</small>
            </a>
        }
    </div>

    <!-- Products -->
    <div class="col-xl-3 col-md-6">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Login" asp-action="Index"
               class="btn btn-success btn-lg w-100 h-100 d-flex flex-column justify-content-center p-4 shadow-sm hover-scale">
                <i class="fas fa-box fa-3x mb-3"></i>
                <span class="fs-5 fw-bold">Browse Products</span>
                <small class="text-light opacity-75 mt-1">(@Model.ProductCount available)</small>
            </a>
        }
        else
        {
            <a asp-controller="Product" asp-action="Index"
               class="btn btn-success btn-lg w-100 h-100 d-flex flex-column justify-content-center p-4 shadow-sm hover-scale">
                <i class="fas fa-box fa-3x mb-3"></i>
                <span class="fs-5 fw-bold">Manage Products</span>
                <small class="text-light opacity-75 mt-1">(@Model.ProductCount in catalog)</small>
            </a>
        }
    </div>

    <!-- Orders -->
    <div class="col-xl-3 col-md-6">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Login" asp-action="Index"
               class="btn btn-warning btn-lg w-100 h-100 d-flex flex-column justify-content-center p-4 shadow-sm hover-scale">
                <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                <span class="fs-5 fw-bold">View Orders</span>
                <small class="text-light opacity-75 mt-1">(@Model.OrderCount processed)</small>
            </a>
        }
        else
        {
            <a asp-controller="Order" asp-action="Index"
               class="btn btn-warning btn-lg w-100 h-100 d-flex flex-column justify-content-center p-4 shadow-sm hover-scale">
                <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                <span class="fs-5 fw-bold">Manage Orders</span>
                <small class="text-light opacity-75 mt-1">(@Model.OrderCount total)</small>
            </a>
        }
    </div>

    <!-- Upload -->
    <div class="col-xl-3 col-md-6">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Login" asp-action="Index"
               class="btn btn-info btn-lg w-100 h-100 d-flex flex-column justify-content-center p-4 shadow-sm hover-scale">
                <i class="fas fa-upload fa-3x mb-3"></i>
                <span class="fs-5 fw-bold">Upload Files</span>
                <small class="text-light opacity-75 mt-1">Payment proofs & documents</small>
            </a>
        }
        else
        {
            <a asp-controller="Upload" asp-action="Index"
               class="btn btn-info btn-lg w-100 h-100 d-flex flex-column justify-content-center p-4 shadow-sm hover-scale">
                <i class="fas fa-upload fa-3x mb-3"></i>
                <span class="fs-5 fw-bold">Upload Files</span>
                <small class="text-light opacity-75 mt-1">Payment proofs & documents</small>
            </a>
        }
    </div>
</div>

<!-- ========================= -->
<!--     STORAGE INITIALIZATION -->
<!-- ========================= -->
@if (Model.CustomerCount == 0 && Model.ProductCount == 0 && Model.OrderCount == 0)
{
    <div class="alert alert-warning alert-dismissible fade show mb-5" role="alert">
        <div class="d-flex">
            <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
            </div>
            <div class="flex-grow-1">
                <h5 class="alert-heading">First Time Setup Required</h5>
                <p class="mb-3">It looks like this is your first time running the application. Click the button below to initialize Azure Storage with sample data.</p>
                <form asp-action="InitializeStorage" method="post" class="d-inline">
                    <button type="submit" class="btn btn-warning me-2">
                        <i class="fas fa-cog me-1"></i> Initialize Azure Storage
                    </button>
                </form>
                <button type="button" class="btn btn-outline-warning" data-bs-toggle="collapse" data-bs-target="#setupInfo">
                    <i class="fas fa-info-circle me-1"></i> Learn More
                </button>
                <div class="collapse mt-3" id="setupInfo">
                    <div class="card card-body">
                        <small>
                            This will create necessary tables and containers in Azure Storage and populate them with sample data including:
                            <ul class="mb-0 mt-2">
                                <li>Sample customers</li>
                                <li>Demo products</li>
                                <li>Test orders</li>
                                <li>Required storage structure</li>
                            </ul>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<hr class="my-5" />

<!-- ========================= -->
<!--     FEATURED PRODUCTS     -->
<!-- ========================= -->

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">
                <i class="fas fa-star text-warning me-2"></i> Featured Products
            </h2>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary btn-sm">
                View All <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>

        @if (Model.FeaturedProducts?.Any() == true)
        {
            <div class="row g-4">
                @foreach (var product in Model.FeaturedProducts.Take(8))
                {
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm product-card">
                            <!-- Product Image -->
                            @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top"
                                     alt="@product.ProductName"
                                     style="height: 200px; object-fit: cover;"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                     style="height: 200px; display: none;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                     style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }

                            <!-- Stock Badge -->
                            @if (product.StockAvailable <= 0)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-danger">Out of Stock</span>
                                </div>
                            }
                            else if (product.StockAvailable < 10)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-warning text-dark">Low Stock</span>
                                </div>
                            }

                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title text-center mb-2">@product.ProductName</h6>

                                <p class="card-text small text-muted flex-grow-1 text-center">
                                    @{
                                        var desc = product.Description ?? "No description available";
                                        @(desc.Length > 80 ? desc.Substring(0, 80) + "..." : desc)
                                    }
                                </p>

                                <div class="mt-auto">
                                    <div class="text-center mb-3">
                                        <p class="mb-1">
                                            <strong class="text-success fs-5">@product.Price.ToString("C")</strong>
                                        </p>
                                        <small class="text-muted">
                                            <i class="fas fa-box me-1"></i>@product.StockAvailable in stock
                                        </small>
                                    </div>

                                    <div class="d-grid gap-2">
                                        @if (!User.Identity.IsAuthenticated)
                                        {
                                            <a asp-controller="Login" asp-action="Index"
                                               class="btn btn-outline-primary">
                                                <i class="fas fa-sign-in-alt me-1"></i> Login to Shop
                                            </a>
                                        }
                                        else
                                        {
                                            <div class="btn-group" role="group">
                                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId"
                                                   class="btn btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i> View
                                                </a>
                                                @if (User.IsInRole("Customer"))
                                                {
                                                    <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.ProductId"
                                                       class="btn btn-success @(product.StockAvailable <= 0 ? "disabled" : "")">
                                                        <i class="fas fa-cart-plus me-1"></i> Add to Cart
                                                    </a>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center py-5">
                <div class="py-3">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <h4>No Products Available</h4>
                    <p class="mb-3">Get started by adding your first product to the catalog.</p>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Add Your First Product
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Login" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-1"></i> Login to Get Started
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- ========================= -->
<!--     RECENT ACTIVITY       -->
<!-- ========================= -->
@if (Model.RecentOrders?.Any() == true && User.Identity.IsAuthenticated)
{
    <hr class="my-5" />

    <div class="row">
        <div class="col-12">
            <h3 class="mb-4">
                <i class="fas fa-history text-info me-2"></i> Recent Activity
            </h3>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Product</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders.Take(5))
                                {
                                    <tr>
                                        <td><small>@order.OrderId.Substring(0, 8)...</small></td>
                                        <td>@order.Username</td>
                                        <td>@order.ProductName</td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span>
                                        </td>
                                        <td><strong>@order.TotalPrice.ToString("C")</strong></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .hover-scale {
        transition: transform 0.2s ease-in-out;
    }

        .hover-scale:hover {
            transform: translateY(-2px);
        }

    .product-card {
        transition: box-shadow 0.2s ease-in-out;
    }

        .product-card:hover {
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
</style>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "completed" => "bg-success",
            "processing" => "bg-primary",
            "submitted" => "bg-warning text-dark",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}